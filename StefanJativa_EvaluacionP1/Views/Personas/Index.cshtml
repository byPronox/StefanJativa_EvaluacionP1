@model IEnumerable<StefanJativa_EvaluacionP1.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

<h1>Persona</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar Persona</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Casado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Casado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono.Modelo)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
